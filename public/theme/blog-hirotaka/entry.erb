<div id="bread_crumb">
  <%= bread_crumb %>
</div>
<section>
  <div class="row">
    <div class="span8">
      <div class="page-header">
        <h1><%= @entry.title %></h1>
      </div>
      <div class="header">
        <ul class="info">
          <li class="date"><%= l @entry.created_at, :format => :long %></li>
          <% unless @entry.category.nil? %>
            <li class="category"><a href="<%= @entry.category.link %>"><%= @entry.category.title %></a></li>
          <% end %>
          <% unless @entry.tags.size.zero? %>
            <li class="tags"><%= @entry.tags_to_html %></li>
          <% end %>
          <li class="author"><%= @entry.user.name %></li>
        </ul>
      </div>
      <div class="body">
        <%= @entry.body %>
      </div>
      <% if logged_in? %>
        <div class="footer">
          <p><a href="<%= @entry.edit_link %>"><%= t('edit') %></a></p>
        </div>
      <% end %>
    </div>
    <div class="span4">
      <div class="well">
        <dl>
          <%= erb :"#{@theme.path}/side_menu" %>
        </dl>
      </div>
    </div>
  </div>
</section>
